class Symmetric {
    int n;
    int *a;   // size = n*(n+1)/2
public:
    Symmetric(int n) {
        this->n = n;
        a = new int[n*(n+1)/2]{0};
    }
    int index(int i, int j) {          // assumes i >= j
        return i*(i+1)/2 + j;
    }
    void set(int i, int j, int x) {
        if (i >= j) a[index(i, j)] = x;
        else        a[index(j, i)] = x;
    }
    int get(int i, int j) {
        if (i >= j) return a[index(i, j)];
        else        return a[index(j, i)];
    }
};
