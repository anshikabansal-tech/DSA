#include <iostream>
using namespace std;

#define MAX 100

class IntStack {
    int arr[MAX];
    int top;
public:
    IntStack() { top = -1; }
    bool isEmpty() { return top == -1; }
    void push(int x) {
        if (top < MAX - 1)
            arr[++top] = x;
    }
    int pop() {
        if (!isEmpty())
            return arr[top--];
        return 0;
    }
};

int main() {
    IntStack s;
    string postfix;

    cout << "Enter postfix expression: ";
    cin >> postfix;

    for (int i = 0; i < (int)postfix.length(); i++) {
        char ch = postfix[i];

        // if operand (digit)
        if (isdigit(ch)) {
            int val = ch - '0'; // convert char digit to int
            s.push(val);
        }
        // operator
        else {
            int val2 = s.pop();
            int val1 = s.pop();
            int res = 0;

            switch (ch) {
            case '+': res = val1 + val2; break;
            case '-': res = val1 - val2; break;
            case '*': res = val1 * val2; break;
            case '/': res = val1 / val2; break;
            }

            s.push(res);
        }
    }

    cout << "Result = " << s.pop() << endl;

    return 0;
}
