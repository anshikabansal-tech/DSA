#include <iostream>
using namespace std;

void heapify(int arr[], int n, int i, bool isMax) {
    int extreme = i;
    int l = 2 * i + 1;
    int r = 2 * i + 2;

    if (isMax) {
        if (l < n && arr[l] > arr[extreme]) extreme = l;
        if (r < n && arr[r] > arr[extreme]) extreme = r;
    } else {
        if (l < n && arr[l] < arr[extreme]) extreme = l;
        if (r < n && arr[r] < arr[extreme]) extreme = r;
    }

    if (extreme != i) {
        swap(arr[i], arr[extreme]);
        heapify(arr, n, extreme, isMax);
    }
}

void heapSort(int arr[], int n, bool isMax) {
    for (int i = n / 2 - 1; i >= 0; i--)
        heapify(arr, n, i, isMax);

    for (int i = n - 1; i > 0; i--) {
        swap(arr[0], arr[i]);
        heapify(arr, i, 0, isMax);
    }
}

int main() {
    int n;
    cout << "Enter size: ";
    cin >> n;
    int arr[n];
    cout << "Enter elements:\n";
    for (int i = 0; i < n; i++) cin >> arr[i];

    int ch;
    cout << "1. Increasing order\n2. Decreasing order\nEnter choice: ";
    cin >> ch;

    bool isMax = (ch == 1);
    heapSort(arr, n, isMax);

    for (int i = 0; i < n; i++) cout << arr[i] << " ";
    return 0;
}
