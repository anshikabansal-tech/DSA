class Diagonal {
    int n;
    int *a;     // size n
public:
    Diagonal(int n) {
        this->n = n;
        a = new int[n]{0};
    }
    void set(int i, int j, int x) {
        if (i == j) a[i] = x;
        // else ignore (because off-diagonal always 0)
    }
    int get(int i, int j) {
        if (i == j) return a[i];
        return 0;
    }
};
