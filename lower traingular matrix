class LowerTriangular {
    int n;
    int *a;   // size = n*(n+1)/2
public:
    LowerTriangular(int n) {
        this->n = n;
        a = new int[n*(n+1)/2]{0};
    }
    int index(int i, int j) {       // i >= j
        return i*(i+1)/2 + j;
    }
    void set(int i, int j, int x) {
        if (i >= j) a[index(i, j)] = x;
    }
    int get(int i, int j) {
        if (i >= j) return a[index(i, j)];
        return 0;
    }
};
