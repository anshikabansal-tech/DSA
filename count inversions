#include <iostream>
using namespace std;

long long mergeAndCount(int arr[], int temp[], int left, int mid, int right) {
    int i = left;      // left subarray index
    int j = mid + 1;   // right subarray index
    int k = left;      // temp array index
    long long invCount = 0;

    while (i <= mid && j <= right) {
        if (arr[i] <= arr[j]) {
            temp[k++] = arr[i++];
        } else {
            // arr[i] > arr[j] and i < j -> all elements from i..mid are inversions with arr[j]
            temp[k++] = arr[j++];
            invCount += (mid - i + 1);
        }
    }

    // copy remaining elements
    while (i <= mid) temp[k++] = arr[i++];
    while (j <= right) temp[k++] = arr[j++];

    // copy back to original array
    for (int p = left; p <= right; p++) {
        arr[p] = temp[p];
    }

    return invCount;
}

long long mergeSortAndCount(int arr[], int temp[], int left, int right) {
    long long invCount = 0;
    if (left < right) {
        int mid = (left + right) / 2;

        invCount += mergeSortAndCount(arr, temp, left, mid);       // left part
        invCount += mergeSortAndCount(arr, temp, mid + 1, right);  // right part

        invCount += mergeAndCount(arr, temp, left, mid, right);    // merge + count
    }
    return invCount;
}

